    <script>
        function counter(n) {
            (function loop() {
                console.log(n);
                if (n>5) {
                    document.getElementById("DisplayCountdown").innerHTML = n;
                }
                else {
                    document.getElementById("DisplayCountdown").innerHTML = "Warning Less than Â½ way to launch, time left =   " + n;
                }
                  if (n--) {
                    setTimeout(loop, 1000);
                }
                if (n< 0) {
                    document.getElementById("DisplayCountdown").innerHTML = "BLASTOFF!!!"
                }
            })();
        }

    </script>
